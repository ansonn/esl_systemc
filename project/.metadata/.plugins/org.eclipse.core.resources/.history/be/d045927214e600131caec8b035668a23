#include <iostream>
#include <systemc.h>
using namespace std;

int sc_main(int, char *[])
{
	sc_int<13> a = 13;
	sc_uint<5> b = -8;

	a = b;

	cout << "!!!Hello World!!! a=" << a << endl;
	return 0;

}
